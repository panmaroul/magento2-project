        </resources>
    </route>
    <route url="/V1/update/deleteAllCategories/" method="POST">
        <service class="Pylon\Erp\Api\UpdateInterface" method="deleteAllCategories" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/update/updateProducts/" method="POST">
        <service class="Pylon\Erp\Api\UpdateInterface" method="updateProducts" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/update/updateOrders/" method="POST">
        <service class="Pylon\Erp\Api\UpdateInterface" method="updateOrders" />
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    
    
</routes>